{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order - Order",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "table": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::table.table"
    },
    "numOfSeats": {
      "type": "integer"
    },
    "isActive": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "isPaid": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "order_items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order-item.order-item",
      "mappedBy": "order"
    },
    "seats": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::seat.seat",
      "mappedBy": "order"
    },
    "code": {
      "type": "customField",
      "options": {
        "uuid-format": "^[A-Za-z0-9]{7}$",
        "disable-regenerate": true
      },
      "customField": "plugin::strapi-advanced-uuid.uuid"
    },
    "payments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::payment.payment",
      "mappedBy": "order"
    }
  }
}
